{
	"name": "hackernews",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"axios": "^0.19.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-favicon": "^2.0.1",
		"newrelic": "^6.2.0",
		"path": "^0.12.7",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-scripts": "3.2.0",
		"styled-components": "^4.4.1"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/index.js",
			"!src/serviceWorker.js",
			"!src/hooks/*.js",
			"!src/selectors/*.js",
			"!src/mappers/*.js",
			"!src/utils/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 95,
				"functions": 95,
				"lines": 95,
				"statements": 95
			}
		},
		"coverageReporters": [
			"html",
			"text"
		]
	},
	"scripts": {
		"start": "node server.js",
		"dev": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"deploy": "git push heroku master"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
